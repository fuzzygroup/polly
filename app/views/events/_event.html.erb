<div id="<%= dom_id event %>">
  
    <%= show_event_action_links(event) %>
  </p>
  <p>&nbsp;</p>
  <div class="border rounded p-3 mb-4">
    <h2 class="text-center">Event Details</h2>
  <p>
    <strong>Name:</strong>
    <%= event.name %>
  </p>

  <p>
    <strong>Event type:</strong>
    <%= event.event_type.name %>
  </p>

  <p>
    <strong>Date start:</strong>
    <%= event.date_start %>
  </p>

  <p>
    <strong>Date end:</strong>
    <%= event.date_end %>
  </p>

  <p>
    <strong>Time start:</strong>
    <%= event.time_start.strftime("%I:%M %p") %>
    <%#= event.time_start.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Time end:</strong>
    <%= event.time_end.strftime("%I:%M %p") %>
    <%#= event.time_end.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= event.location %>
  </p>

  <p>
    <strong>Organization:</strong>
    <%= event.organization.name %>
  </p>

  <p>
    <strong>Created By:</strong>
    <%= link_to(event.user.full_name, user_path(event.user)) %>
  </p>

  <p>
    <strong>Does this event have speakers:</strong>
    <%= show_yes_no(event.has_speakers) %>
  </p>

  <p>
    <strong>Does this event have Musicians:</strong>
    <%= show_yes_no(event.has_musicians) %>
  </p>

  <p>
    <strong>Does this event have props:</strong>
    <%= show_yes_no(event.has_props) %>
  </p>

  <p>
    <strong>Does this event have partners:</strong>
    <%= show_yes_no(event.has_partners) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= simple_format(event.body) %>
  </p>
  </div>
</div>
