<div id="<%= dom_id availability %>">
  <p>
    <strong>User:</strong>
    <%= link_to(availability.user.full_name, user_path(availability.user)) %>
  </p>

  <p>
    <strong>Date start:</strong>
    <%= availability.date_start %>
  </p>

  <p>
    <strong>Date end:</strong>
    <%= availability.date_end %>
  </p>

  <p>
    <strong>Is <%=availability.user.full_name%> available on the above dates:</strong>
    <%#= link_to(availability.availability, availability_path(availability)) %>
    <%= show_yes_no(availability.availability)%>
  </p>

</div>
